{
  "name": "love-and-roll",
  "version": "1.0.0",
  "description": "Love & Roll Visual Novel - Mobile Game",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "node node_modules\\react-scripts\\bin\\react-scripts.js start",
    "start-alt": "node start.js",
    "build": "node node_modules\\react-scripts\\bin\\react-scripts.js build",
    "test": "node node_modules\\react-scripts\\bin\\react-scripts.js test",
    "eject": "node node_modules\\react-scripts\\bin\\react-scripts.js eject",
    "electron": "electron .",
    "electron-dev": "node scripts/electron-dev.js",
    "dev": "node scripts/dev.js",
    "electron-dev-simple": "npm start & timeout 5 && electron .",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && npx electron-builder --publish=never"
  },
  "dependencies": {
    "framer-motion": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.loveandroll.app",
    "productName": "Love & Roll",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "sign": false,
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Love & Roll"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
